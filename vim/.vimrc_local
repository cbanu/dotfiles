" initialize plugin manager
:source ~/.vimrc_vundle

" disable startup message
set shortmess+=I

" set leader key to space bar
let mapleader=' '

" no arrows for me
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

" show menu when autocompleting
set wildmenu

" display line numbers on the left (hybrid mode)
if v:version > 702
    set relativenumber
else
    set number
endif

" allow backspacing over autoindent, line breaks and start of insert action
set backspace=indent,eol,start

" map key to toggle search results highlighting
nnoremap <leader>h :set hlsearch!<CR>

" show search results as you type
set incsearch

" turn on syntax highlighting
syntax enable

" don't wrap lines
set nowrap

" try to keep previous line indenting if no file-specific indent rules
set autoindent

" set tab size to 4
set tabstop=4
set shiftwidth=4
set softtabstop=4
set smarttab

" show tabs and line endings
set list
if has("multi_byte")
    set listchars=tab:▸\ ,eol:¬
else
    set listchars=tab:>-,eol:<
endif

" setup color theme
if $COLORTERM == 'gnome-terminal' || $COLORTERM == 'xfce4-terminal'
    set t_Co=256
    set t_ut=
    colorscheme molokai
    set background=dark
endif

" set tags search
nnoremap <leader>. :CtrlPTag<CR>

" set tags bar toggle
nnoremap <leader>b :TagbarToggle<CR>

" setup airline bling
let g:airline#extensions#tabline#enabled=1
set laststatus=2
let g:airline_theme='molokai'
let g:airline_powerline_fonts=1
